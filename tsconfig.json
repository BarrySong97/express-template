{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "moduleResolution": "bundler",
    "outDir": "dist",
    "importsNotUsedAsValues": "remove",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "*.ts",
    "app/**/*.ts",
    "index.mts",
    "index.mts",
    "app/config.mts",
    "app/routing.mts",
    "app/controllers/email-controller.mts",
    "app/middleware/method-provider.mts"
  ],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
