{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": "./app",
    "paths": {
      "@/*": ["*"]
    },
    "moduleResolution": "bundler",
    "outDir": "dist",
    "importsNotUsedAsValues": "remove",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["index.ts", "app"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
